<%- include('../partials/header.ejs')%>
<main class="match-game-main">
    <div class="game-info">
    <form action="/games" method="POST" class="new-form"  >
        <label for="game">Name of the game</label>
        <input name="game" id="game" type="text"  required>
        <br>
        <label for="host">Host</label>
        <input name="host" id="host" type="text"  required>
        <br>
        <label for="category">Category of the game</label>
        <input name="category" id="category" type="text"  required>
        <br>
        <label for="description">Description of the game</label>
        <textarea name="description" id="description" required></textarea>
        <br>
        <input type="submit" value="Submit">
      
    </form>
</div>
</main>
