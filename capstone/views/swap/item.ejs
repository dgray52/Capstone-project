<%- include('../partials/header.ejs')%>

<main>
    <div class="product-container">
        <div class="product-image">
            <img src="<%= item.img%>" alt="item image">
        </div>
        <div class="product-details">
            <h2 class="product-title"><%=item.name%></h2>
            <p class="category"><%= item.category%></p>
            <p class="seller">Seller: <%=item.seller%></p>
    
            <form><button class="edit" type="submit" formmethod="GET" formaction="/swaps/<%= item.id%>/edit">Edit</button>
                <button class= "delete" type="submit" formmethod="POST" formaction="/swaps/<%= item.id%>?_method=DELETE">Delete</button>
            </form>
    
            <div class="product-info">
                <h3>Product Info</h3>
                <p>
                    <%=item.description%>
                </p>
            </div>
        </div>
    </div>
</main>

<%- include('../partials/footer.ejs')%>