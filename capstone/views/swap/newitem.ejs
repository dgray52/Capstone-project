<%- include('../partials/header.ejs')%>
<main class="swap-item-main">
    <div class="item-info">
    <form action="/swaps" method="POST" class="new-form"  >
        <label for="name">Name of the item</label>
        <input name="name" id="name" type="text"  required>
        <br>
        <label for="seller">Seller</label>
        <input name="seller" id="seller" type="text"  required>
        <br>
        <label for="category">Category of the item</label>
        <input name="category" id="category" type="text"  required>
        <br>
        <label for="description">Description of the item</label>
        <textarea name="description" id="description" required></textarea>
        <br>
        <input type="submit" value="Submit">
      
    </form>
</div>
</main>
