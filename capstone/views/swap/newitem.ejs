<%- include('../partials/header.ejs')%>

<main>
    <div class="form-container">
        <form class="form-group" method = "POST" action = "/swaps" enctype="multipart/form-data">
                <div>
                    <label>Seller Name *</label>
                    <input name= "seller" type="text" value="" required>
                </div>
                <div>
                    <label>Item Name *</label>
                    <input name="name" id="name" type="text" value="" required>
                </div>
                <div class="category-menu">
                    <label>Category of the item</label> 
                    <select name="category" required>
                        <option label=" "></option>
                        <option>Electronics</option>
                        <option>Clothing</option>
                        <option>Materials</option>
                        <option>Other</option>
                    </select>
                </div>
                <div class="details-input">
                    <label>Details</label> 
                    <textarea name="description" id="details-txt" rows="6" required></textarea>
                </div>
                <div class="upload-img">
                    <label>Image</label> 
                    <input id="upload-btn" type="file" name="img">
                </div>

                <input class="form-submit" type="submit">

        </form>
    </div>
</main>

<%- include('../partials/footer.ejs')%>